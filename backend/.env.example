# RAG Platform Backend Environment Variables
# Copy this file to .env and configure as needed

# MongoDB Configuration
MONGO_URL="mongodb://localhost:27017"
DB_NAME="rag_platform"

# CORS Configuration
CORS_ORIGINS="*"

# Cache Directories - IMPORTANT: Keep everything within /app for portability
# These ensure all model downloads stay within the project directory
HF_HOME="/app/.cache/huggingface"
TRANSFORMERS_CACHE="/app/.cache/huggingface"
SENTENCE_TRANSFORMERS_HOME="/app/.cache/sentence_transformers"

# Optional: Gemini API Key (can also be set via Settings page)
# GEMINI_API_KEY="your-api-key-here"
